@page "/adminmenu"
@inject IJSRuntime JSRuntime
<Header />

<AuthorizeView Roles="A">
    <Authorized>
        <!-- Main Container -->
        <main>
            <div class="justify-content-center align-items-center bg-white">
                <div class="container-fluid">
                    <h2 class="text-center font-weight-normal dark-grey my-5">Administrator menu</h2>
                    <div class="row mt-3">
                        <div class="col-sm-0 col-md-0 col-lg-2 col-xl-3"></div>
                        <div class="container col-sm-12 col-md-12 col-lg-4 col-xl-3 text-center">
                            <a href="usermanagment" class="btn btn-lg btn-light btn-block my-2 py-4">Users</a>

                            <a href="managecharities" class="btn btn-lg btn-light btn-block my-2 py-4">Charities</a>

                        </div>
                        <div class="container col-sm-12 col-md-12 col-lg-4 col-xl-3 text-center">
                            <a href="" class="btn btn-lg btn-light btn-block my-2 py-4">Volunteers</a>

                            <a href="" class="btn btn-lg btn-light btn-block my-2 py-4">Inventory</a>


                        </div>
                        <div class="col-sm-0 col-md-0 col-lg-2 col-xl-3"></div>
                    </div>
                </div>
            </div>
        </main>
        <!-- /Main Container -->
    </Authorized>
    <NotAuthorized>
        <h3>You don't have access</h3>
    </NotAuthorized>
</AuthorizeView>

@code {

    protected override async Task OnInitializedAsync()
    {
        await JSRuntime.InvokeVoidAsync("setTitle", "Administrator menu");
    }
}
