@page "/adminmenu"
@inject IJSRuntime JSRuntime
<Header />

<AuthorizeView Roles="A">
    <Authorized>

        <!-- Modal -->
        <div class="modal fade top" id="exampleModalPreview" tabindex="-1" role="dialog"
             aria-labelledby="exampleModalPreviewLabel" aria-hidden="true" data-backdrop='false'>
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header pb-0">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body pt-0">
                        <p class="h3 text-center font-weight-normal">Inventory - Future Add-on</p>
                        <div class="text-center">
                            <span class="h4">The inventory system would be a future add-on on the current system.</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal -->

        <!-- Main Container -->
        <main>
            <div class="justify-content-center align-items-center bg-white">
                <div class="container-fluid">
                    <h2 class="text-center font-weight-normal dark-grey my-5">Administrator menu</h2>
                    <div class="row mt-3">
                        <div class="col-sm-0 col-md-0 col-lg-2 col-xl-3"></div>
                        <div class="container col-sm-12 col-md-12 col-lg-4 col-xl-3 text-center">
                            <a href="usermanagment" class="btn btn-lg btn-light btn-block my-2 py-4">Users</a>

                            <a href="managecharities" class="btn btn-lg btn-light btn-block my-2 py-4">Charities</a>

                        </div>
                        <div class="container col-sm-12 col-md-12 col-lg-4 col-xl-3 text-center">
                            <a href="volunteermanagement" class="btn btn-lg btn-light btn-block my-2 py-4">Volunteers</a>

                            <!-- Button trigger modal -->
                            <button id="modalActivate" type="button" class="btn btn-lg btn-light btn-block my-2 py-4"
                                    data-toggle="modal" data-target="#exampleModalPreview">
                                Inventory
                            </button>

                        </div>
                        <div class="col-sm-0 col-md-0 col-lg-2 col-xl-3"></div>
                    </div>
                </div>
            </div>
        </main>
        <!-- /Main Container -->
    </Authorized>
    <NotAuthorized>
        <h3>You don't have access</h3>
    </NotAuthorized>
</AuthorizeView>

@code {

    protected override async Task OnInitializedAsync()
    {
        await JSRuntime.InvokeVoidAsync("setTitle", "Administrator menu");
    }
}
