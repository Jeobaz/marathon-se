@page "/coordinatormenu"
@inject IJSRuntime JSRuntime
@attribute [Authorize(Roles = "C")]

<Header />


<!-- Main Container -->
<main>
    <div class="justify-content-center align-items-center bg-white">
        <div class="container-fluid">
            <h2 class="text-center font-weight-normal dark-grey my-5">Coordinator menu</h2>
            <div class="row mt-3">
                <div class="col-sm-0 col-md-0 col-lg-2 col-xl-3"></div>
                <div class="container col-sm-12 col-md-12 col-lg-4 col-xl-3 text-center">
                    <a href="runnermanagement" class="btn btn-lg btn-light btn-block my-2 py-4">Runners</a>
                </div>
                <div class="container col-sm-12 col-md-12 col-lg-4 col-xl-3 text-center">
                    <button type="button" class="btn btn-lg btn-light btn-block my-2 py-4">Sponsorship</button>
                </div>
                <div class="col-sm-0 col-md-0 col-lg-2 col-xl-3"></div>
            </div>
        </div>
    </div>
</main>
<!-- /Main Container -->

@code {
    protected override async Task OnInitializedAsync()
    {
        await JSRuntime.InvokeVoidAsync("setTitle", "Coordinator menu");
    }
}
